<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PlatonusCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/textTime"
            style="@style/PlatonusTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/platonus_text_primary_on_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="08:00\n08:50" />

        <TextView
            android:id="@+id/textLessonType"
            style="@style/PlatonusTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Л"
            android:textColor="@color/platonus_red_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textTime"
            app:layout_constraintStart_toStartOf="@id/textTime"
            app:layout_constraintTop_toBottomOf="@id/textTime" />

        <TextView
            android:id="@+id/textSubject"
            style="@style/PlatonusTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/textTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Мобильные технологии и приложения" />

        <TextView
            android:id="@+id/textRoom"
            style="@style/PlatonusTextBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:textColor="@color/platonus_text_primary_on_white"
            app:layout_constraintStart_toStartOf="@id/textSubject"
            app:layout_constraintEnd_toEndOf="@id/textSubject"
            app:layout_constraintTop_toBottomOf="@id/textSubject"
            android:text="Главный 901" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
